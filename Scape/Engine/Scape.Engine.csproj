<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    
    <IsWindows Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">true</IsWindows>
    <IsOSX Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))' == 'true'">true</IsOSX>
    <IsLinux Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))' == 'true'">true</IsLinux>
  </PropertyGroup>
  <PropertyGroup Condition="'$(IsWindows)'=='true'">
    <DefineConstants>SCAPE_PLATFORM_WINDOWS</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(IsOSX)'=='true'">
    <DefineConstants>SCAPE_PLATFORM_MACOS</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(IsLinux)'=='true'">
    <DefineConstants>SCAPE_PLATFORM_LINUX</DefineConstants>
  </PropertyGroup>

  <!-- Create a custom target to build Scape.Membrane and copy the binary -->
  <Target Name="BuildMembrane" BeforeTargets="Build" Condition="'$(IsWindows)'=='true'">
    <MakeDir Directories="../../build"/>
    <Exec Command="cmake .." WorkingDirectory="../../build"/>
    <Exec Command="cmake --build . --target Scape.Membrane --config $(Configuration)" WorkingDirectory="../../build"/>
    <Copy SourceFiles="../../build/lib/$(Configuration)/Scape.Membrane.dll" DestinationFolder="$(OutDir)" SkipUnchangedFiles="true"/>
  </Target>
  <Target Name="BuildMembrane" BeforeTargets="Build" Condition="'$(IsOSX)'=='true'">
  </Target>
  <Target Name="BuildMembrane" BeforeTargets="Build" Condition="'$(IsLinux)'=='true'">
    <MakeDir Directories="../../build"/>
    <Exec Command="cmake -DCMAKE_BUILD_TYPE=$(Configuration) .." WorkingDirectory="../../build"/>
    <Exec Command="cmake --build . --target Scape.Membrane" WorkingDirectory="../../build"/>
    <Copy SourceFiles="../../build/Scape/Membrane/libScape.Membrane.so" DestinationFolder="$(OutDir)" SkipUnchangedFiles="true"/>
  </Target>
</Project>