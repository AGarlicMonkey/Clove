<UserControl x:Class="Garlic.Bulb.DirectoryView"
			 x:Name="this"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:Garlic.Bulb"
             mc:Ignorable="d" d:DesignWidth="267.396" d:DesignHeight="155.156">
	<ListBox ItemsSource="{Binding AllItems}" 
			 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
		<ListBox.ItemsPanel>
			<ItemsPanelTemplate>
				<WrapPanel Orientation="Horizontal" ItemWidth="50"/>
			</ItemsPanelTemplate>
		</ListBox.ItemsPanel>
		
		<ListBox.ItemTemplate>
			<DataTemplate>
				<local:DirectoryViewItem/>
			</DataTemplate>
		</ListBox.ItemTemplate>
	</ListBox>
</UserControl>